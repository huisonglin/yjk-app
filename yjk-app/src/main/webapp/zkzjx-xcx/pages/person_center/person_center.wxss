/* pages/person/person.wxss */
page{
  background-color: #f5f5f5;
}
.person_top {
  width: 100%;
  height: 420rpx;
  position: relative;
  font-size: 32rpx;
}

.person_top>image {
  width: 100%;
  height: inherit;
  position: absolute;
  top: 0;
  z-index: 10;
}

.person_top_text {
  width: 100%;
  position: absolute;
  top:23%;
  z-index: 100;
}

.person_top_text image {
  display: block;
  width: 220rpx;
  height: 220rpx;
  margin: auto;
  border-radius: 50%;
}
.person_foot{
  width: 94%;
  margin: auto;
  font-size: 32rpx;
}
.person_foot_1{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ededed;
}
.person_foot_1:last-child{
   border-bottom:none;
}

.person_top_text view {
  color: white;
  text-align: center;
  padding: 20rpx 0;
  font-weight: bold;
}
.person_foot_left image,.person_foot_right image{
  width:45rpx;
  height: 45rpx;
  display: inline-block;
  align-content: center
}
.person_foot_left,.person_foot_right{
  display: flex;
  align-items: center;
  padding: 25rpx 0;
}
.person_foot_right text{
  display: inline-block;
}