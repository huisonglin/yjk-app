/* pages/person/contact/contact.wxss */
page{
  background-color: #f5f5f5;
}
.contact_top{
  height: 35vh;
  background-color: #53ccc3;
  display: flex;
  align-items: center;
}
.contact_foot{
  background-color: #f5f5f5;
}
.contact_foot_1,.contact_foot_2{
  background-color: white;
  padding: 20rpx 4%;
}
.contact_foot_1{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 0 20rpx 0;
}
.contact_foot_1 image{
  width: 60rpx;
  height: 60rpx;
}
.contact_foot_2 textarea{
  font-size: 30rpx;
  width: 100%;
  height: 15vh;
  color: #666;
  padding: 40rpx 0;
}
.logo{
  display: block;
  margin: auto;
  width: 250rpx;
  height: 250rpx;
}
.fasong{
  color: white;
  background-color: #53ccc3;
  width: 85%;
  border-radius: 30rpx;
}