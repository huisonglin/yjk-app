/**index.wxss**/
page{
  position: relative;
  height: 100vh;
}
.swiper-block{
  height: 75vh;
  width: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;  
  overflow:unset;
}
.slide-image{ 
  height:55vh;
  width: 520rpx;
  border-radius: 9rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2); 
  margin: 0rpx 30rpx;
  z-index: 1;
  background-color: white;
}
.active{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
  z-index: 20; 
}
.content{
  position: absolute;
  bottom: 180rpx;
  color: white;
  z-index: 1000;
  display: none;
}
.content_1{
  font-size: 38rpx;
  margin-left: 10rpx;
}
.content_2{
  font-size: 32rpx;
  margin-left: 10rpx;
}
.color{
  background-color: #53ccc3;
  color: white;
  font-weight: bold;
  border-radius: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  border: none;
  padding: 15rpx 0;
} 
