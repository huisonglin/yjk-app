<van-panel title="请选择范围"  status="单位KM">
  <view class = "distance">
  <van-slider
    value="{{currentValue}}"
    custom-class="slider"
    bar-height="6px"
    active-color="green"
    use-button-slot
    bind:drag="onDrag"
  >
  <view class="custom-button" slot="button">
    {{currentValue * 10}}KM
  </view>
  </van-slider>
</view>
</van-panel>

