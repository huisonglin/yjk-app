<van-tabs type="card" active='{{tabActive}}' color="green" bind:click = "selectTab">
  <van-tab title="个人中心"></van-tab>
  <van-tab title="身份切换"></van-tab>
  <van-tab title="筛选机械"></van-tab>
</van-tabs>
