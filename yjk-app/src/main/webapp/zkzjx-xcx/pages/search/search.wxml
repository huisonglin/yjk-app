<!--pages/search/search.wxml-->
<van-panel title="请选择范围"  status="单位KM">
  <view class = "distance">
  <van-slider
    value="{{currentValue}}"
    custom-class="slider"
    bar-height="6px"
    active-color="green"
    use-button-slot
    bind:drag="onDrag"
  >
  <view class="custom-button" slot="button">
    {{currentValue * 10}}KM
  </view>
  </van-slider>
</view>
</van-panel>

<van-panel title="请选择地址"  >
<view><van-cell-group>
  <van-field
    value="安徽省合肥市永安存"
    clearable
    use-button-slot
  >
    <van-button slot="button" size="small" type="primary">选择地址></van-button>
  </van-field>
</van-cell-group></view>
</van-panel>

<van-panel title="请选择机械" use-footer-slot >
<view class = "device_type">
  <view wx:for = "{{modelItems}}">
    <van-button plain type="primary" data-id="{{item.id}}" data-name="{{item.name}}" bind:click = "intoSelect" size="small">{{item.name}}</van-button>
  </view>
</view>
  <view slot="footer" wx:if = "{{modelName != '' && twoStageModelName != '' && sepcName != ''}}">
    <van-button size="small">您当前选择的是:{{modelName}}/{{twoStageModelName}}/{{sepcName}}</van-button>
  </view>
</van-panel>






