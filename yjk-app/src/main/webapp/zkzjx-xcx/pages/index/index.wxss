.top{
  width:80%;
  margin: auto;
  overflow: hidden;
  border: 1rpx solid  #df545b;
  border-radius: 33rpx;
}
.top-left{
  font-size: 38rpx;
  float: left;
  width: 32%;
  text-align: center;
  line-height: 66rpx;
  color: #df545b;
}
.lrb{
  border-left: 1rpx solid  #df545b;
  border-right: 1rpx solid  #df545b;
}
.block{
  display:block;
}
.releaseBtn{
  position:fixed;
  bottom:0;
  width:100%;
}
.bar{
  margin-top:1rem;
}
.box{
   position: relative;
   width: 100%;
   transform-origin: top;
   background-repeat: no-repeat;
   background-size: cover;

}
.filter{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30%;
    background: rgba(7, 17, 27, 0.4);

}
